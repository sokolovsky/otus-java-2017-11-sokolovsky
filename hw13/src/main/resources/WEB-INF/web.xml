<?xml version="1.0" encoding="ISO-8859-1"?>

<web-xapp>
    <display-name>HW13</display-name>
    <description>Project WAR file</description>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>ru.otus.sokolovsky.hw13.servlet.LoginServlet</servlet-class>
        <init-param>
            <param-name>template</param-name>
            <param-value>templates/login.ftl</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>cacheViewServlet</servlet-name>
        <servlet-class>ru.otus.sokolovsky.hw13.servlet.CacheViewServlet</servlet-class>
        <init-param>
            <param-name>template</param-name>
            <param-value>templates/cache_view.ftl</param-value>
        </init-param>
    </servlet>
    <filter>
        <filter-name>auth</filter-name>
        <filter-class>ru.otus.sokolovsky.hw13.filters.AuthFilter</filter-class>
    </filter>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>
                /WEB-INF/dependency-injection-config.xml
            </param-value>
        </init-param>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cacheViewServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <filter-mapping>
        <filter-name>auth</filter-name>
        <servlet-name>cacheViewServlet</servlet-name>
    </filter-mapping>

    <listener>
        <listener-class>ru.otus.sokolovsky.hw13.listener.InitAccounts</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/dependency-injection-config.xml
        </param-value>
    </context-param>
</web-xapp>